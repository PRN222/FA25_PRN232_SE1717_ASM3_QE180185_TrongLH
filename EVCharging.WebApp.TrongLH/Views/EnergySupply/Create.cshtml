@model EVCharging.WebApp.TrongLH.Models.EnergySupplyViewModel

@{
    ViewData["Title"] = "Create Energy Supply";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create New Energy Supply</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StationTrongLhid" class="form-label"></label>
                                    <select asp-for="StationTrongLhid" class="form-select"
                                        asp-items="@(new SelectList(Model.AvailableStations ?? new List<EVCharging.WebApp.TrongLH.Models.StationOption>(), "Id", "Name"))">
                                        <option value="">-- Select Station --</option>
                                    </select>
                                    <span asp-validation-for="StationTrongLhid" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SupplyType" class="form-label"></label>
                                    <input asp-for="SupplyType" class="form-control"
                                        placeholder="e.g., Solar, Grid, Wind" />
                                    <span asp-validation-for="SupplyType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SourceName" class="form-label"></label>
                                    <input asp-for="SourceName" class="form-control"
                                        placeholder="e.g., Solar Farm Alpha" />
                                    <span asp-validation-for="SourceName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContractNumber" class="form-label"></label>
                                    <input asp-for="ContractNumber" class="form-control"
                                        placeholder="e.g., SOL-2024-001" />
                                    <span asp-validation-for="ContractNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CapacityKw" class="form-label"></label>
                                    <input asp-for="CapacityKw" class="form-control" step="0.01" min="0.01" />
                                    <span asp-validation-for="CapacityKw" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="AvailableKw" class="form-label"></label>
                                    <input asp-for="AvailableKw" class="form-control" step="0.01" min="0" />
                                    <span asp-validation-for="AvailableKw" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="PeakCapacity" class="form-label"></label>
                                    <input asp-for="PeakCapacity" class="form-control" step="0.01" min="0" />
                                    <span asp-validation-for="PeakCapacity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="EfficiencyRate" class="form-label"></label>
                                    <input asp-for="EfficiencyRate" class="form-control" step="0.1" min="0" max="100" />
                                    <span asp-validation-for="EfficiencyRate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="StartDate" class="form-label"></label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="IsRenewable" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsRenewable" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Create
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function () {
            const startDateInput = document.querySelector('input[name="StartDate"]');
            if (startDateInput && !startDateInput.value) {
                startDateInput.value = new Date().toISOString().split('T')[0];
            }

            // Debug form submission
            const form = document.querySelector('form');
            const submitButton = document.querySelector('button[type="submit"]');

            if (form) {
                console.log('Create Form found:', form);

                form.addEventListener('submit', function (e) {
                    console.log('Create Form submit event triggered');
                    console.log('Form valid:', form.checkValidity());
                });
            } else {
                console.error('Create Form not found!');
            }

            if (submitButton) {
                console.log('Create Submit button found:', submitButton);

                submitButton.addEventListener('click', function (e) {
                    console.log('Create Submit button clicked');
                    // Let the form submit naturally, don't prevent default
                });
            } else {
                console.error('Create Submit button not found!');
            }
        });
    </script>
}
