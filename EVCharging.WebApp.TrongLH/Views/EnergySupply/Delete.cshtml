@model EVCharging.WebApp.TrongLH.Models.EnergySupplyViewModel

@{
    ViewData["Title"] = "Delete Energy Supply";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-exclamation-triangle"></i> Delete Energy Supply
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Warning!
                        </h5>
                        <p>Are you sure you want to delete this energy supply? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Energy Supply Information:</h5>
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.EnergySupplyTrongLhid</dd>

                                <dt class="col-sm-4">Station:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Model.StationName</span>
                                </dd>

                                <dt class="col-sm-4">Supply Type:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.SupplyType</span>
                                </dd>

                                <dt class="col-sm-4">Source Name:</dt>
                                <dd class="col-sm-8">@Model.SourceName</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Technical Details:</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Capacity (kW):</dt>
                                <dd class="col-sm-8">@Model.CapacityKw.ToString("N2")</dd>

                                <dt class="col-sm-4">Available (kW):</dt>
                                <dd class="col-sm-8">@Model.AvailableKw.ToString("N2")</dd>

                                <dt class="col-sm-4">Peak Capacity (kW):</dt>
                                <dd class="col-sm-8">@(Model.PeakCapacity?.ToString("N2") ?? "N/A")</dd>

                                <dt class="col-sm-4">Efficiency Rate (%):</dt>
                                <dd class="col-sm-8">@(Model.EfficiencyRate?.ToString("N1") ?? "N/A")</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <form asp-action="Delete" method="post">
                                <input asp-for="EnergySupplyTrongLhid" type="hidden" />
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    <button type="button" class="btn btn-danger" id="deleteButton">
                                        <i class="fas fa-trash"></i> Delete Permanently
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Single confirmation for delete using modern approach
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Delete page loaded');

            const deleteButton = document.getElementById('deleteButton');
            const form = document.querySelector('form');

            console.log('Delete button found:', deleteButton);
            console.log('Form found:', form);

            if (deleteButton && form) {
                deleteButton.addEventListener('click', function (e) {
                    console.log('Delete button clicked');
                    e.preventDefault();

                    if (confirm('Are you absolutely sure you want to delete this energy supply? This action cannot be undone.')) {
                        console.log('User confirmed deletion, submitting form');
                        form.submit();
                    } else {
                        console.log('User cancelled deletion');
                    }
                });
            } else {
                console.error('Delete button or form not found!');
            }
        });
    </script>
}
